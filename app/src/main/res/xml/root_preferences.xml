<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Temperature" app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="lowest_temp"
            app:title="Lowest acceptable level"
            app:defaultValue="10"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />
        <EditTextPreference
            app:key="highest_temp"
            app:defaultValue="15"
            app:title="Highest acceptable level"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />

    </PreferenceCategory>
    <PreferenceCategory app:title="Humidity" app:iconSpaceReserved="false">
        <EditTextPreference
            app:key="lowest_humidity"
            app:defaultValue="15"
            app:title="Lowest acceptable level"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />
        <EditTextPreference
            app:key="highest_humidity"
            app:defaultValue="70"
            app:title="Highest acceptable level"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />

    </PreferenceCategory>
    <PreferenceCategory app:title="Co2 levels" app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="lowest_air"
            app:defaultValue="200"
            app:title="Lowest acceptable level"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />
        <EditTextPreference
            app:key="highest_air"
            app:defaultValue="1500"
            app:title="Highest acceptable level"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications" app:iconSpaceReserved="false" >

        <SwitchPreferenceCompat
            app:key="temperature"
            app:summaryOn="Notification for temperature"
            app:title="Temperature notification" />
        <SwitchPreferenceCompat
            app:key="humidity"
            app:summaryOn="Notification for humidity"
            app:title="Humidity notification" />
        <SwitchPreferenceCompat
            app:key="air"
            app:summaryOn="Notification for co2 sensor"
            app:title="Co2 notification" />

    </PreferenceCategory>

</PreferenceScreen>
